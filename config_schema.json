{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hockey Scoreboard Plugin Configuration",
  "description": "Configuration schema for the Hockey Scoreboard plugin - displays live, recent, and upcoming NHL and NCAA Hockey games",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the hockey scoreboard plugin"
    },
    "defaults": {
      "type": "object",
      "description": "Default settings that can be inherited by leagues (can be overridden per league)",
      "properties": {
        "display_duration": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 60,
          "description": "Default duration in seconds to display each game"
        },
        "show_records": {
          "type": "boolean",
          "default": false,
          "description": "Default setting to show team records (wins-losses)"
        },
        "show_ranking": {
          "type": "boolean",
          "default": false,
          "description": "Default setting to show team rankings (when available)"
        },
        "show_odds": {
          "type": "boolean",
          "default": false,
          "description": "Default setting to show betting odds for games"
        },
        "show_shots_on_goal": {
          "type": "boolean",
          "default": false,
          "description": "Default setting to display shots on goal statistics during games"
        },
        "show_powerplay": {
          "type": "boolean",
          "default": true,
          "description": "Default setting to highlight powerplay situations"
        },
        "update_interval_seconds": {
          "type": "integer",
          "default": 3600,
          "minimum": 30,
          "maximum": 86400,
          "description": "Default base update interval in seconds for fetching game data"
        },
        "season_cache_duration_seconds": {
          "type": "integer",
          "default": 86400,
          "minimum": 3600,
          "maximum": 604800,
          "description": "How long to cache season data (seconds)"
        }
      }
    },
    "nhl": {
      "type": "object",
      "description": "NHL (National Hockey League) configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable NHL games"
        },
        "display_modes": {
          "type": "object",
          "description": "Which display modes to show for NHL",
          "properties": {
            "live": {
              "type": "boolean",
              "default": true,
              "description": "Show NHL live games"
            },
            "recent": {
              "type": "boolean",
              "default": true,
              "description": "Show NHL recent games"
            },
            "upcoming": {
              "type": "boolean",
              "default": true,
              "description": "Show NHL upcoming games"
            }
          }
        },
        "teams": {
          "type": "object",
          "description": "Team filtering and favorites configuration",
          "properties": {
            "favorite_teams": {
              "type": "array",
              "items": {"type": "string"},
              "default": [],
              "description": "NHL favorite team abbreviations (e.g., ['TB', 'TOR', 'BOS'])"
            },
            "favorite_teams_only": {
              "type": "boolean",
              "default": false,
              "description": "Only show NHL games with favorite teams"
            },
            "show_all_live": {
              "type": "boolean",
              "default": false,
              "description": "Show all live NHL games, not just favorites"
            }
          }
        },
        "filtering": {
          "type": "object",
          "description": "Game filtering and quantity settings",
          "properties": {
            "recent_games_to_show": {
              "type": "integer",
              "default": 5,
              "minimum": 1,
              "maximum": 20,
              "description": "With favorite teams: Number of recent games PER team (e.g., 1 with 2 teams = 2 games). Without favorite teams: Total number of most recent games to show (e.g., 5 = show 5 most recent games total)."
            },
            "upcoming_games_to_show": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 50,
              "description": "With favorite teams: Number of upcoming games PER team (e.g., 2 with 3 teams = up to 6 games). Without favorite teams: Total number of next upcoming games to show (e.g., 1 = show only the next 1 game total)."
            }
          }
        },
        "update_intervals": {
          "type": "object",
          "description": "Data update frequency settings (in seconds)",
          "properties": {
            "base": {
              "type": "integer",
              "default": 60,
              "minimum": 15,
              "maximum": 300,
              "description": "Base update interval for NHL data"
            },
            "live": {
              "type": "integer",
              "default": 30,
              "minimum": 10,
              "maximum": 300,
              "description": "Update interval for live NHL games"
            },
            "recent": {
              "type": "integer",
              "default": 3600,
              "minimum": 60,
              "maximum": 86400,
              "description": "Update interval for recent NHL games"
            },
            "upcoming": {
              "type": "integer",
              "default": 3600,
              "minimum": 60,
              "maximum": 86400,
              "description": "Update interval for upcoming NHL games"
            },
            "odds": {
              "type": "integer",
              "default": 3600,
              "minimum": 60,
              "maximum": 86400,
              "description": "Update interval for NHL betting odds data"
            }
          }
        },
        "display_durations": {
          "type": "object",
          "description": "How long to display games on screen (in seconds)",
          "properties": {
            "base": {
              "type": "number",
              "default": 15,
              "minimum": 5,
              "maximum": 60,
              "description": "Base display duration for NHL games"
            },
            "live": {
              "type": "number",
              "default": 20,
              "minimum": 5,
              "maximum": 120,
              "description": "Display duration for live NHL games"
            },
            "recent": {
              "type": "number",
              "default": 15,
              "minimum": 5,
              "maximum": 60,
              "description": "Display duration for recent NHL games"
            },
            "upcoming": {
              "type": "number",
              "default": 15,
              "minimum": 5,
              "maximum": 60,
              "description": "Display duration for upcoming NHL games"
            }
          }
        },
        "display_options": {
          "type": "object",
          "description": "What information to display on the scoreboard",
          "properties": {
            "show_records": {
              "type": "boolean",
              "default": false,
              "description": "Show NHL team records (wins-losses)"
            },
            "show_ranking": {
              "type": "boolean",
              "default": false,
              "description": "Show NHL team rankings/standings"
            },
            "show_odds": {
              "type": "boolean",
              "default": false,
              "description": "Show betting odds for NHL games"
            },
            "show_shots_on_goal": {
              "type": "boolean",
              "default": true,
              "description": "Display shots on goal statistics for NHL games"
            },
            "show_powerplay": {
              "type": "boolean",
              "default": true,
              "description": "Highlight powerplay situations for NHL games"
            }
          }
        },
        "live_priority": {
          "type": "boolean",
          "default": true,
          "description": "Prioritize live NHL games over scheduled games"
        },
        "dynamic_duration": {
          "type": "object",
          "description": "Dynamic duration settings - automatically adjust display time based on content",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable dynamic duration for NHL games"
            },
            "max_duration_seconds": {
              "type": "number",
              "minimum": 60,
              "maximum": 600,
              "description": "Maximum duration in seconds when dynamic duration is enabled"
            },
            "modes": {
              "type": "object",
              "description": "Per-mode dynamic duration settings",
              "properties": {
                "live": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Enable dynamic duration for NHL live games"
                    },
                    "max_duration_seconds": {
                      "type": "number",
                      "minimum": 60,
                      "maximum": 600,
                      "description": "Maximum duration for NHL live games"
                    }
                  }
                },
                "recent": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Enable dynamic duration for NHL recent games"
                    },
                    "max_duration_seconds": {
                      "type": "number",
                      "minimum": 60,
                      "maximum": 600,
                      "description": "Maximum duration for NHL recent games"
                    }
                  }
                },
                "upcoming": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": false,
                      "description": "Enable dynamic duration for NHL upcoming games"
                    },
                    "max_duration_seconds": {
                      "type": "number",
                      "minimum": 60,
                      "maximum": 600,
                      "description": "Maximum duration for NHL upcoming games"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
